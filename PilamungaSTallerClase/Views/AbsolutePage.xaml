<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PilamungaSTallerClase.Views.AbsolutePage"
             Title="AbsolutePage">
    <AbsoluteLayout>
        <Image Source="osopolar.png"
               AbsoluteLayout.LayoutBounds="0,0,1,1"
               AbsoluteLayout.LayoutFlags="All"
               Aspect="AspectFit"/>
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">
            <StackLayout Padding="20,120,20,20" Spacing="20">
                <Label Text="Oso Polar" FontSize="24" FontAttributes="Bold" />
                <Label Text="Es uno de los animales que viven en el artico" FontSize="18" />
                <Label Text="tienen la capacidad de caminar y nadar grandes distancias a través del hielo y sus aguas heladas. Son nadadores muy fuertes y hábiles" FontSize="18" />
                <BoxView HeightRequest="600" Color="Transparent"/>
            </StackLayout>
        </ScrollView>
        <Button
            x:Name="BtnIrAGridPage"
            Text="Ir a GridPage"
            AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Beige"
            TextColor="Black"
            Clicked="BtnIrAGridPage_Clicked" />
    </AbsoluteLayout>
</ContentPage>